<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/foto1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="24dp"
        android:text="Rezza Jaya Mukti"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="94dp"
        android:text="Mahasiswa asli bandung yang kesehariannya no lyfe tapi punya cita cita tingginamun berhati mulia,penampilan nomor sekian,speak nomor 1"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="197dp"
        android:text="Follow Me"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/twitterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="181dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@mipmap/twitter" />


    <ImageButton
        android:id="@+id/instagramBtn"
        android:layout_width="98dp"
        android:layout_height="96dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="124dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/instagram" />

    <ImageButton
        android:id="@+id/locationBtn"
        android:layout_width="98dp"
        android:layout_height="94dp"
        android:layout_below="@+id/twitterBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="266dp"
        android:layout_marginTop="-108dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/location" />

    <Button
        android:id="@+id/about"
        android:layout_width="276dp"
        android:layout_height="56dp"
        android:layout_below="@+id/locationBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/roundedrectangle"
        android:text="About"
        android:textColor="#ffffff" />
</RelativeLayout>